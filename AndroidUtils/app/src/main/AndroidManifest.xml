<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.maomao.androidutils">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesignDemo">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".recyclerview.base.RecyclerViewActivity"/>
        <activity
            android:name=".materialdesign.sharedelement.ShareElementActivity"
            android:label="@string/ShareElement">
        </activity>
        <activity
            android:name=".materialdesign.sharedelement.ShareElementOtherActivity"
            android:label="@string/ShareElementOther">
        </activity>
        <activity android:name=".recyclerview.base.StaggeredGridLayoutActivity"/>
        <activity android:name=".imooc.progressbar.ProgressBarActivity">
        </activity>
        <activity android:name=".imooc.wuziqi.WuziqiActivity">
        </activity>

        <!-- 利用Theme自定义activity的专场动画 -->
        <activity
            android:name=".theme.ThemeActivity"
            android:theme="@style/Anim_fade"/>
        <activity android:name=".theme.SplashActivity">
        </activity>
        <activity android:name=".dialog.DialogActivity">
        </activity>
        <activity
            android:name=".dialog.DialogMainActivity"
            android:theme="@style/MyDialogTopRight">
        </activity>
        <activity android:name=".viewpager.ScrollViewPagerActivity">
        </activity>
    </application>

</manifest>